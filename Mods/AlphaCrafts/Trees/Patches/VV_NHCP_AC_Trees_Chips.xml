            <li>
                <key>VV_Papayas</key>
                <value>Papaya chips</value>
            </li>
            <li>
                <key>VV_Persimmons</key>
                <value>Persimmon chips</value>
            </li>
            <li>
                <key>VV_Quinces</key>
