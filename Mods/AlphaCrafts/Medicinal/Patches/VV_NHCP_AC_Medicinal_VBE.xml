                    <value>
                        <li>VV_ChamomileBlossoms</li>
                        <li>VV_LavenderBlossoms</li>
                        <li>VV_LemonBalmLeaves</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[defName="AC_PrepareSpecialtyTeaSachets"]/defaultIngredientFilter/thingDefs</xpath>
                    <value>
                        <li>VV_ChamomileBlossoms</li>
                        <li>VV_LavenderBlossoms</li>
