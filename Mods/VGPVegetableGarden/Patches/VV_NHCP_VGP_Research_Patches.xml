                            <success>Always</success>
                            <xpath>
                                /Defs/ThingDef
                                [defName="VV_SpinachPlant" or
                                defName="VV_ParsnipPlant" or
                                defName="VV_WhiteTurnipPlant" or
                                defName="VV_LeekPlant" or
                                defName="VV_BlackBeanPlant" or
                                defName="VV_BlackberryBush"]
                                /plant
