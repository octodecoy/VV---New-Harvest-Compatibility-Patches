<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VV - New Harvest</li>
			<li>VV - New Harvest: Garden Crops</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationSequence">
					<operations>
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RecipeDef[defName="Make_Hardtack" or defName="Make_HardtackBulk" or defName="VG_MakeBiofuel"]/ingredients/li/filter/thingDefs</xpath>
							<value>
								<li>VV_AmaranthGrain</li>
								<li>VV_MilletGrain</li>
								<li>VV_QuinoaSeeds</li>
								<li>VV_TeffGrain</li>
							</value>
						</li>	
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RecipeDef[defName="Make_Hardtack" or defName="Make_HardtackBulk" or defName="VG_MakeBiofuel"]/fixedIngredientFilter/thingDefs</xpath>
							<value>
								<li>VV_AmaranthGrain</li>
								<li>VV_MilletGrain</li>
								<li>VV_QuinoaSeeds</li>
								<li>VV_TeffGrain</li>
							</value>
						</li>							
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RecipeDef[defName="MakeSilage" or defName="MakebulkSilage"]/ingredients/li[1]/filter/thingDefs</xpath>
							<value>
								<li>VV_AmaranthGrain</li>
								<li>VV_MilletGrain</li>
								<li>VV_QuinoaSeeds</li>
								<li>VV_TeffGrain</li>
							</value>
						</li>	
						<li Class="PatchOperationAdd">
							<xpath>/Defs/RecipeDef[defName="MakeSilage" or defName="MakebulkSilage"]/fixedIngredientFilter/thingDefs</xpath>
							<value>
								<li>VV_AmaranthGrain</li>
								<li>VV_MilletGrain</li>
								<li>VV_QuinoaSeeds</li>
								<li>VV_TeffGrain</li>
							</value>
						</li>	
					</operations>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>