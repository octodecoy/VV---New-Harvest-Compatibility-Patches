<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[SYR] Processor Framework</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[defName="CPD_MakeWineMust" or defName="CPD_MakeBulkWineMust"]/ingredients/li/filter/thingDefs</xpath>
                    <value>
                        <li>VV_JabuticabaBerries</li>
                        <li>VV_Mulberries</li>
                        <li MayRequire="dankpyon.medieval.overhaul">VV_WhiteMulberries</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[defName="CPD_MakeWineMust" or defName="CPD_MakeBulkWineMust"]/fixedIngredientFilter/thingDefs</xpath>
                    <value>
                        <li>VV_JabuticabaBerries</li>
                        <li>VV_Mulberries</li>
                        <li MayRequire="dankpyon.medieval.overhaul">VV_WhiteMulberries</li>
                    </value>
                </li>
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>VGP Vegetable Garden</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/RecipeDef[defName="VG_MakeCherrywaterMust" or defName="VG_MakeCherrywaterMustBulk"]/ingredients/li/filter/thingDefs</xpath>
                                <value>
                                    <li>VV_SourCherrys</li>
                                </value>
                            </li>
                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/RecipeDef[defName="VG_MakeCherrywaterMust" or defName="VG_MakeCherrywaterMustBulk"]/fixedIngredientFilter/thingDefs</xpath>
                                <value>
                                    <li>VV_SourCherrys</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>