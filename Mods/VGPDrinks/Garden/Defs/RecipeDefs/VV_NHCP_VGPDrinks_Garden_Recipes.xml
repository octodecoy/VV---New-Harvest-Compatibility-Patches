<Defs>
    <RecipeDef ParentName="SweetSodaBase">
        <defName>VV_VGD_BrewBlackberrySoda</defName>
        <label>brew blackberry soda</label>
        <description>Brew blackberries and syrup into a subtly sweet soda.\n\nMakes 6.</description>
        <jobString>Brewing blackberry soda</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>VV_Blackberries</li>
                    </thingDefs>
                </filter>
                <count>25</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>VV_Blackberries</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <VV_VGD_BlackberrySoda>6</VV_VGD_BlackberrySoda>
        </products>
    </RecipeDef>
