<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[SYR] Processor Framework</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>/Defs/RecipeDef[defName="CPD_MakeWineMust" or defName="CPD_MakeBulkWineMust"]/ingredients/li/filter/thingDefs</xpath>
                    <value>
                        <li>VV_Blackberries</li>
                        <li>VV_Blackcurrants</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>/Defs/RecipeDef[defName="CPD_MakeWineMust" or defName="CPD_MakeBulkWineMust"]/fixedIngredientFilter/thingDefs</xpath>
                    <value>
                        <li>VV_Blackberries</li>
                        <li>VV_Blackcurrants</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>