<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="VFEM2_AlchemicalWorkbench"]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>
                        /Defs/ThingDef
                        [defName="VV_SoothingHerbalOintment" or 
                        defName="VV_RestorativeHerbalOintment" or 
                        defName="VV_AdvancedHerbalMedicine" or
                        defName="VV_GinsengDecoction" or
                        defName="VV_EchinaceaDecoction" or
                        defName="VV_ValerianDecoction"]
                        /recipeMaker/recipeUsers
                    </xpath>
                    <value>
                        <li>VFEM2_AlchemicalWorkbench</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/WorkGiverDef[defName="VV_NHCP_DoBillsAlchemyCooking"]/fixedBillGiverDefs</xpath>
                    <value>
                        <li>VFEM2_AlchemicalWorkbench</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="VFEM2_AlchemicalWorkbench_Electric"]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>
                        /Defs/ThingDef
                        [defName="VV_SoothingHerbalOintment" or 
                        defName="VV_RestorativeHerbalOintment" or 
                        defName="VV_AdvancedHerbalMedicine" or
                        defName="VV_GinsengDecoction" or
                        defName="VV_EchinaceaDecoction" or
                        defName="VV_ValerianDecoction"]
                        /recipeMaker/recipeUsers
                    </xpath>
                    <value>
                        <li>VFEM2_AlchemicalWorkbench_Electric</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/WorkGiverDef[defName="VV_NHCP_DoBillsAlchemyCooking"]/fixedBillGiverDefs</xpath>
                    <value>
                        <li>VFEM2_AlchemicalWorkbench_Electric</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>