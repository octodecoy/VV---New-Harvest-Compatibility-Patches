<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>VV - New Harvest</li>
            <li>VV - New Harvest: Forage Crops</li>
        </mods>
        <match Class="PatchOperationAdd">
            <success>Always</success>
            <xpath>/Defs/ProcessorFramework.ProcessDef/ingredientFilter/thingDefs[li="Hay"]</xpath>
            <value>
                <li>VV_AlfalfaHay</li>
                <li>VV_CloverHay</li>
                <li>VV_TimothyHay</li>
            </value>
        </match>
    </Operation>
</Patch>