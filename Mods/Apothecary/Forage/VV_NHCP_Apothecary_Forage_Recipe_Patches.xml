<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/RecipeDef[defName="MakeAYCompost" or defName="MakeBulkAYCompost"]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[defName="MakeAYCompost" or defName="MakeBulkAYCompost"]/ingredients/li/filter/thingDefs</xpath>
                    <value>
                        <li>VV_AlfalfaHay</li>
                        <li>VV_CloverHay</li>
                        <li>VV_TimothyHay</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[defName="MakeAYCompost" or defName="MakeBulkAYCompost"]/fixedIngredientFilter/thingDefs</xpath>
                    <value>
                        <li>VV_AlfalfaHay</li>
                        <li>VV_CloverHay</li>
                        <li>VV_TimothyHay</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>