<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Unaffected by toxic fallout -->
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="VV_NettlePlant"][not(thingClass)]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VV_NettlePlant"]</xpath>
                    <value>
                        <thingClass>VanillaPlantsExpanded.Plant_StopsGrowingInToxins</thingClass>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VV_NettlePlant"]/description</xpath>
                    <value>
                        <description>A hardy medicinal herb covered with fine stinging hairs. Nettle is valued for its anti-inflammatory properties and is often used in herbal ointments and salves.\n\n&lt;color=#E5E54C&gt;Gameplay effect:&lt;/color&gt; Nettle plants are unaffected by toxic fallout and, contrary to other plants, won't die from it.</description>
                    </value>
                </li>   
                <li Class="NewHarvestPatches.AddOrReplace">
                    <xpath>/Defs/ThingDef[defName="VV_NettlePlant"]/plant</xpath>
                    <value>
                        <dieFromToxicFallout>false</dieFromToxicFallout>
                    </value>
                </li>           
            </operations>
        </match>
    </Operation>
</Patch>