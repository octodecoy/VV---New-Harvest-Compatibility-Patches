<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Can grow during winter and not die from cold -->
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="VV_BroccoliPlant"][not(thingClass)]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VV_BroccoliPlant"]</xpath>
                    <value>
                        <thingClass>VanillaPlantsExpanded.Plant_WinterResistant</thingClass>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VV_BroccoliPlant"]/description</xpath>
                    <value>
                        <description>A hardy, cool-season plant that produces large green heads of florets. Broccoli is rich in vitamins and grows best in fertile, well-drained soil.\n\n&lt;color=#E5E54C&gt;Gameplay effect:&lt;/color&gt; Broccoli plants will continue to grow at 10% speed through winter. They need to be planted during growing season, though.</description>
                    </value>
                </li>
                <li Class="NewHarvestPatches.AddOrReplace">
                    <xpath>/Defs/ThingDef[defName="VV_BroccoliPlant"]/plant</xpath>
                    <value>
                        <dieIfLeafless>false</dieIfLeafless>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
