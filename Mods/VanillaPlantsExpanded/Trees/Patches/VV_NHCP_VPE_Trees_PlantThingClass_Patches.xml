<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="VV_GrapefruitTree"][not(thingClass)]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VV_GrapefruitTree"]</xpath>
                    <value>
                        <thingClass>VanillaPlantsExpanded.Plant_HighTempAffected</thingClass>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VV_GrapefruitTree"]/description</xpath>
                    <value>
                        <description>A citrus tree that produces large, tangy fruits with a slightly bitter taste. Grapefruit trees thrive in warm, sunny climates and require well-drained soil.\n\n&lt;color=#E5E54C&gt;Gameplay effect:&lt;/color&gt; Grapefruit trees will grow 30% faster if temperature is between 37 and 60 ºC.</description>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="VV_LimeTree"][not(thingClass)]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VV_LimeTree"]</xpath>
                    <value>
                        <thingClass>VanillaPlantsExpanded.Plant_HighTempAffected</thingClass>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VV_LimeTree"]/description</xpath>
                    <value>
                        <description>A small tree that produces sour, juicy limes. Thrives in warm climates and is often used in cooking and beverages.\n\n&lt;color=#E5E54C&gt;Gameplay effect:&lt;/color&gt; Lime trees will grow 30% faster if temperature is between 37 and 60 ºC.</description>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>