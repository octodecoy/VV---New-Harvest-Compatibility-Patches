<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="VV_GrapefruitTree"][not(thingClass)]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VV_GrapefruitTree"]</xpath>
                    <value>
                        <thingClass>VanillaPlantsExpanded.Plant_HighTempAffected</thingClass>
                    </value>
                </li>
                <li Class="NewHarvestPatches.EditString">
                    <xpath>/Defs/ThingDef[defName="VV_GrapefruitTree"]/description</xpath>
                    <mode>AppendWhole</mode>
                    <replaceWith>\n\n&lt;color=#E5E54C&gt;Gameplay effect:&lt;/color&gt; Grapefruit trees will grow 30% faster if temperature is between 37 and 60 ºC.</replaceWith>
                </li>
            </operations>
        </match>
    </Operation>
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="VV_LimeTree"][not(thingClass)]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VV_LimeTree"]</xpath>
                    <value>
                        <thingClass>VanillaPlantsExpanded.Plant_HighTempAffected</thingClass>
                    </value>
                </li>
                <li Class="NewHarvestPatches.EditString">
                    <xpath>/Defs/ThingDef[defName="VV_LimeTree"]/description</xpath>
                    <mode>AppendWhole</mode>
                    <replaceWith>\n\n&lt;color=#E5E54C&gt;Gameplay effect:&lt;/color&gt; Lime trees will grow 30% faster if temperature is between 37 and 60 ºC.</replaceWith>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>