<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Requires nearby water or grows slower -->
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="VV_ReedPlant"][not(thingClass)]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VV_ReedPlant"]</xpath>
                    <value>
                        <thingClass>VEF.Plants.Plant_WaterNearby</thingClass>
                    </value>
                </li>
                <li Class="NewHarvestPatches.EditString">
                    <xpath>/Defs/ThingDef[defName="VV_ReedPlant"]/description</xpath>
                    <mode>AppendWhole</mode>
                    <replaceWith>\n\n&lt;color=#E5E54C&gt;Gameplay effect:&lt;/color&gt; While reeds can still thrive away from water, they do so at a 25% slower rate than if there is water within 6 tiles.</replaceWith>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>