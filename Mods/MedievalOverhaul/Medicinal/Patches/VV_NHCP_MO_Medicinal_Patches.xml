<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="DankPyon_AlchemyBench"]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>            
                        /Defs/ThingDef
                        [defName="VV_SoothingHerbalOintment" or
                        defName="VV_RestorativeHerbalOintment" or
                        defName="VV_AdvancedHerbalMedicine" or
                        defName="VV_GinsengDecoction" or
                        defName="VV_EchinaceaDecoction" or
                        defName="VV_ValerianDecoction"]
                        /recipeMaker/recipeUsers
                    </xpath>
                    <value>
                        <li>DankPyon_AlchemyBench</li>
                    </value>
                </li>    
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/WorkGiverDef[defName="VV_NHCP_DoBillsAlchemyCooking"]/fixedBillGiverDefs</xpath>
                    <value>
                        <li>DankPyon_AlchemyBench</li>
                    </value>
                </li> 
            </operations>
        </match>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/BiomeDef[defName="DankPyon_DarkForest"]/wildPlants</xpath>
        <value>
            <VV_NettlePlant>0.001</VV_NettlePlant>
            <VV_YarrowPlant>0.001</VV_YarrowPlant>
            <VV_ChamomilePlant>0.001</VV_ChamomilePlant>
            <VV_ThymePlant>0.001</VV_ThymePlant>
        </value>
    </Operation>
</Patch>