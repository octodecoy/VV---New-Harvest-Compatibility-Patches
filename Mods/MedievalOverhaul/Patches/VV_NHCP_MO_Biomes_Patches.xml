<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>VV - New Harvest</li>
            <li>VV - New Harvest: Medicinal Plants</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="DankPyon_DarkForest"]/wildPlants</xpath>
                    <value>
                        <VV_NettlePlant>0.001</VV_NettlePlant>
                        <VV_YarrowPlant>0.001</VV_YarrowPlant>
                        <VV_ChamomilePlant>0.001</VV_ChamomilePlant>
                        <VV_ThymePlant>0.001</VV_ThymePlant>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>VV - New Harvest</li>
            <li>VV - New Harvest: Flowers</li>                
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="DankPyon_DarkForest"]/wildPlants</xpath>
                    <value>
                        <VV_Ivy>0.05</VV_Ivy>
                    </value>
                </li>        
            </operations>
        </match>
    </Operation>
</Patch>